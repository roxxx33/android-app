<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.apnafinal.RequestActivity"
    android:background="@drawable/ic_launcher1">

    <TextView android:text="You Have A request to join Community Mayur Vihar Phase-1" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp" >
    <Button
        android:layout_marginTop="30dp"

        android:id="@+id/acceptButton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:onClick="AcceptRequest"
        android:text="ACCEPT"
        android:background="@drawable/rounded_corner"
        android:textColor="#000000"
        android:alpha="0.7"/>

    <Button
        android:layout_marginTop="90dp"

        android:id="@+id/declineButton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"

        android:text="DECLINE"
        android:background="@drawable/rounded_corner"
        android:textColor="#000000"
        android:alpha="0.7"/>
    </LinearLayout>

</RelativeLayout>
